@model TravelPlaces.Models.PlaceServiceProvider
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Place Service Provider</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        @if (ViewBag.SuccessMessage != null)
        {
                <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-action="AddPlaceServiceProvider">
            <div class="form-group">
                <label asp-for="PlaceId" class="control-label"></label>
                <select asp-for="PlaceId"class="form-control" asp-items="@ViewBag.TouristPlacesList">
                    <option value="" >--- Select Place ---</option>
                </select>
                <span asp-validation-for="PlaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label"></label>
                <select asp-for="ProviderId"class="form-control" asp-items="@ViewBag.ServiceProviderList">
                    <option value="" >--- Select Provider ---</option>
                </select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
